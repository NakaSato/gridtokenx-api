@startuml GridTokenX_DFD_Level_0
!define FONT_NAME Arial
!define FONT_SIZE 10
!theme plain

skinparam {
    DefaultFontName FONT_NAME
    DefaultFontSize FONT_SIZE
    Padding 8
    Margin 8
    BackgroundColor white
    BorderColor #333333
    ArrowColor #333333
    Rectangle {
        BackgroundColor #F5F5F5
        BorderColor #333333
    }
    Circle {
        BackgroundColor #E3F2FD
        BorderColor #333333
    }
}

title P2P Energy Trading System - DFD Level 0

' External Entities (Rectangles) - Standard DFD notation positioned around center
rectangle "User Wallet\n(Prosumer/Consumer)" as E1
rectangle "Smart Meter\nSystem" as E2
rectangle "Solana Blockchain" as E3
rectangle "REC Authority\n(Renewable Energy\nCertificates)" as E4

' Process 0 - Central Process (Circle) - positioned in center
circle "0\n\nP2P Energy\nTrading\nPlatform" as P0

' Layout positioning - arrange external entities around central process
E1 -[hidden]- E2
E2 -[hidden]- E3
E3 -[hidden]- E4
E4 -[hidden]- E1

' Data Flows - Standard DFD notation with proper numbering
E1 --> P0 : 1. Buy/Sell Energy Orders
P0 --> E1 : 2. Order Confirmation & Trade Notifications

E2 --> P0 : 3. Real-time Energy Production/Consumption Data
P0 --> E2 : 4. Smart Meter Configuration & Control Commands

P0 --> E3 : 5. Smart Contract Transactions & Token Transfers
E3 --> P0 : 6. Blockchain Transaction Confirmations

P0 --> E4 : 7. REC Issuance & Verification Requests
E4 --> P0 : 8. Renewable Energy Certificate Data

@enduml
